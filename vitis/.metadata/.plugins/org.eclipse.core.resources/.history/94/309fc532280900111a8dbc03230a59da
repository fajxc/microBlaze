#include "xil_io.h"
#include "xil_printf.h"
#include "sleep.h"

#define BASE 0x44A00000
#define REG0 (BASE + 0x00)
#define REG3 (BASE + 0x0C)

int main()
{
    xil_printf("\r\n=== MEM LOAD (b1[0]) TEST ===\r\n");

    // start low
    Xil_Out32(REG0, 0);
    usleep(1000);

    // start high
    Xil_Out32(REG0, 1);

    // wait for done
    u32 r;
    do {
        r = Xil_In32(REG3);
    } while ((r & 0x1) == 0);

    u32 pred = (r >> 4) & 0xF;

    xil_printf("REG3=0x%08x pred=%u\r\n", (unsigned int)r, (unsigned int)pred);

    // re-arm
    Xil_Out32(REG0, 0);

    while(1) {}
}
