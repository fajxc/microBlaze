#include "xparameters.h"
#include "xil_io.h"

#define SIMPLESUM_BASE XPAR_SIMPLESUM_0_S00_AXI_BASEADDR

int main()
{
    Xil_Out32(SIMPLESUM_BASE + 8, 6);   // B
    Xil_Out32(SIMPLESUM_BASE + 12, 7);  // C
    Xil_Out32(SIMPLESUM_BASE + 0, 1);   // START

    while(!(Xil_In32(SIMPLESUM_BASE + 4) & 1)); // wait DONE

    volatile int result = Xil_In32(SIMPLESUM_BASE + 16);

    while(1);
}
